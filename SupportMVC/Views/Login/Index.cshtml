@model dynamic

@{
    ViewData["Title"] = "Login";
}

<form method="post" class="col-lg-6 mx-auto mt-5">
    <h2 class="p-3 text-center fw-bold">Sign In</h2>
    <div class="mb-3 input-group">
        <span class="input-group-text">🌐</span>
        <div class="form-floating">
            <input id="user" name="user" class="form-control" aria-describedby="Username"/>
            <label for="user">Enter a username</label>
        </div>
    </div>
    <div class="mb-3 input-group">
        <span class="input-group-text">🔐</span>
        <div class="form-floating">
            <input type="password" id="pass" name="pass" class="form-control" aria-describedby="password"/>
            <label for="pass">Password</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mb-3 w-100 py-2">Login</button>
    <p class="text-center text-secondary">Don't have an account? <a asp-controller="SignUp" asp-action="Index">Sign Up</a></p>
</form>