<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Technical Support</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/SupportMVC.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Support Tool</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 d-flex align-items-center">
                    @if (User.Identity is { IsAuthenticated: true })
                    {
                        <div class="dropdown">
                            <button class="border-0 bg-transparent nav-item dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Scripts
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li>
                                    <a class="dropdown-item" asp-controller="Scripts" asp-action="Index">View Scripts</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Scripts" asp-action="Create">Add Scripts</a>
                                </li>
                            </ul>
                        </div>
                        
                        <div class="dropdown">
                            <button class="border-0 bg-transparent nav-item dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Connections
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li>
                                    <a class="dropdown-item" asp-controller="Connection" asp-action="Index">View Connections</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Connection" asp-action="Create">Add Connection</a>
                                </li>
                            </ul>
                        </div>
                    <li class="nav-item ms-auto pe-3">
                        <a asp-controller="Profile" asp-action="Index" class="nav-link text-dark mb-0 text-center">@User.Identity.Name</a>
                    </li>
                    <form method="post" asp-controller="Logout" asp-action="Index">
                        <button type="submit" class="btn btn-danger">Logout</button>
                    </form>
                    }
                    else
                    {
                    <li class="nav-item ms-auto">
                        <a class="btn btn-success" asp-area="" asp-controller="SignUp" asp-action="Index">Get Started</a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - Robert - <a href="https://github.com/robertgouveia" target="_blank">Github</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>